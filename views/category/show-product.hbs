
<div class="row mx-auto my-5 w-75">
    <div class="card w-100">
        <div class="card-header">
            Danh sách các sản phẩm trong category {{CatName}}
        </div>
        <div class="card-body">
            <table class="table table-hover my-2">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">TinyDes</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{this.ProID}}</th>
                        <td>{{this.ProName}}</td>
                        <td>{{this.TinyDes}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Quantity}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>