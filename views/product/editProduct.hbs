<div class="row mx-auto my-5">
    .<div class="card">
        <div class="card-header">
            Thêm sản phẩm mới
        </div>
        {{#if msg}}
        <div class="alert alert-{{color}}" role="alert">
            {{msg}}
        </div>
        {{/if}}
        <div class="card-body">
            <form method="post" action="/product/edit/{{product.ProID}}">
                <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" class="form-control" name="ProName" value="{{product.ProName}}">
                </div>
                <div class="form-group">
                    <label>Product TinyDes</label>
                    <input type="text" class="form-control" name="TinyDes" maxlength="80" value="{{product.TinyDes}}">
                </div>
                <div class="form-group">
                    <label>Product FullDes</label>
                    <input type="text" class="form-control" name="FullDes" value="{{product.FullDes}}">
                </div>
                <div class="form-group">
                    <label>Product Price</label>
                    <input type="number" class="form-control" name="Price" min="0" value="{{product.Price}}">
                </div>
                <div class="form-group">
                    <label>Product Quantity</label>
                    <input type="number" class="form-control" name="Quantity" min="0" value="{{product.Quantity}}">
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>