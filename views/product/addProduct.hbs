<div class="row mx-auto my-5">
    <div class="card">
        <div class="card-header">
            Thêm sản phẩm mới
        </div>
        {{#if msg}}
        <div class="alert alert-{{color}}" role="alert">
            {{msg}}
        </div>
        {{/if}}
        <div class="card-body">
            <form method="post" action="/product/add" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" class="form-control" name="ProName">
                </div>
                <div class="form-group">
                    <label>Product TinyDes</label>
                    <input type="text" class="form-control" name="TinyDes" maxlength="80">
                </div>
                <div class="form-group">
                    <label>Product FullDes</label>
                    <input type="text" class="form-control" name="FullDes">
                </div>
                <div class="form-group">
                    <label>Category type</label>
                    <select class="form-control" name="CatID">
                        {{#each categories}}
                            <option value="{{this.CatID}}">{{this.CatName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Product Price</label>
                    <input type="number" class="form-control" name="Price" min="0">
                </div>
                <div class="form-group">
                    <label>Product Quantity</label>
                    <input type="number" class="form-control" name="Quantity" min="0">
                </div>
                <div class="form-group">
                    <label>Insert product image</label>
                    <input type="file" class="form-control-file" name="uploaded_file" accept="image/*">
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>